# Quicker way to edit hosts
function vih () {
    [ -f /etc/hosts.ac ] && sudo rm /etc/hosts.ac;
    sudo vim /etc/hosts;
    [ -f /etc/hosts.ac ] && sudo rm /etc/hosts.ac;
}


